<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket Types</title>
    <link href="../static/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="header">
    <div class="text">
      <a href="/" class="index_nav"><h1>Tracking tickets by event for Gill Coliseum</h1></a>
        <nav>
            <a href="events" class="nav_button">Events</a>
            <a href="eventOutcomes" class="nav_button">Event Outcomes</a>
            <a href="eventoutcomesteams" class="nav_button">Event Outcomes Teams</a>
            <a href="teams" class="nav_button">Teams</a>
            <a href="tickets" class="nav_button">Tickets</a>
            <a href="ticketTypes" class="selected_nav_button">Ticket Types</a>
            <a href="ticketHolders" class="nav_button">Ticket Holders</a>
        </nav>
      </div>
    </div>

  <div class="entities">
    <h2> Ticket Types </h2>
    <!--Citation: Structure of python if and for statements, and table copied from Class lecture file bsg_HTML_UI.zip in CS340 accessed 7/20/23
      Source URL https://canvas.oregonstate.edu/courses/1922991/pages/exploration-web-application-technology?module_item_id=23329626-->
    <div id="browse">
        <table border="1" cellpadding="5">
          {% if ticketTypesData %}
          <thead>
            <tr>
              <!--<th></th>
              <th></th>-->
              <!-- Iterate through each key in the first entry to get the column name -->
              {% for key in ticketTypesData[0].keys() %}
                <!-- Create a <th> tag with the key inside of it, for the rest of the header row -->
                <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
              <!-- End of this for loop -->
              {% endfor %}
            </tr>
        </thead>
        <tbody>
          <tr>
            <!-- Now, iterate through every item in data -->
            {% for item in ticketTypesData %}
                <!--<td><a href="/updateTicketType/{{item.ticketTypeID}}" class="CRUD">Edit</a></td>
                <td><a href="/deleteTicketType/{{item.ticketTypeID}}" class="CRUD">Delete</a></td> -->
						    <!-- Then iterate through every key in the current item dictionary -->
                {% for key in item.keys() %}
						      <!-- Create a <td> element with the value of that key in it -->
						      <td> {{item[key]}} </td> 
				        {% endfor %} 
          </tr>
		        {% endfor %} 
        </tbody>
      {% endif %} 
        </table>
        <p>&nbsp;</p>
        </div> <!-- browse -->

        <div id="insert">
            <form method="POST" id="addTicketType" action="/ticketTypes">
                <legend class="table_header"> Add Ticket Type </legend>
                  <fieldset class="fields">
                    <label class="required"> Ticket Type: </label> <input type="text" name="ticketType" required>
                    <br>
                    <br>
                    <label class="required"> Price: </label> <input type="text" name="price" required>
                  </fieldset>
              <br>
                  <input class="btn" type="submit" id="addTicketType" value="Add Ticket Type" name="addTicketType">
            </form> 
        </div><!-- insert -->
  </div>

</body>
